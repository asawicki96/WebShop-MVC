@model IEnumerable<Shop.Models.Product>
@using Shop.Infrastructrue


<div class="col">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-4">
                <div class="product">
                    <a href="@Url.Action("Detail", "Products", new { id = product.ProductId })">
                        <img src="@Url.ProductImagesPath(product.Image)" class="center" width="200" height="200" alt="Poduct image" />
                        <span class="product-list-name">@product.Name</span>
                        <span class="product-list-name">@product.Price PLN </span>
                    </a>
                </div>
            </div>
        }
    </div>
</div>